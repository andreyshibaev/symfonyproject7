{% extends 'base.html.twig' %}

{% block title %}
    {{ title }} {{ app.user.email }}
{% endblock %}

{% block body %}
    <section id="change_password_page" data-turbo="false">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ul class="breadcrumb py-4">
                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Homepage</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('account-user') }}">Profile</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ title }} {{ app.user.email }}</li>
                </ul>
            </nav>
            <h1>{{ title }} {{ app.user.email }}</h1>
            <h5 class="alert alert-warning">After changing your password, you need to log in to your account again</h5>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
                    <strong>{{ message }}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            {{ form_start(passwordform) }}
            {{ form_errors(passwordform) }}
            {{ form_row(passwordform.currentPassword) }}
            {{ form_row(passwordform.newPassword) }}
            {{ form_row(passwordform.change) }}
            {{ form_end(passwordform) }}
        </div>
    </section>
{% endblock body %}