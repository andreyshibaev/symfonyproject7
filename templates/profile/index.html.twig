{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <section id="profile_page">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
                    <strong>{{ message }}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <h1>{{ title }} {{ app.user.email }}</h1>
            <div class="wrapper_profile_page">
                <div class="info_profile">
                    <h2>Info profile</h2>
                    <p>Name: {{ app.user.username }}</p>
                    <p>Email: {{ app.user.email }}</p>
                </div>
                <div class="edit_btns">
                    <a href="{{ url('user_edit' ) }}" class="btn_profile">Edit profile</a>
                    <a href="{{ url('change_password') }}" class="btn_profile">Change password</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
